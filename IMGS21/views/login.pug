extends layout

block content

    if error
        p.text-danger Es traten leider Fehler auf

    h3 Anmelden bei Studi-Helper
    form(action="/login" method="post")
    div.form-group
     input#title.form-control(type="text" placeholder="Anmeldename" name="username" required autofocus value=(undefined=== login ? "" : login.username))
    div.form-group
     input#title.form-control(type="text" placeholder="E-Mail" name="email" required value=(undefined=== login ? "" : login.email))
    div.form-group
     input#title.form-control(type="password" placeholder="Passwort" name="password")
    div.form-group
     input#title.form-control(type="password" placeholder="Passwort Wdh." name="password")
  
    button.btn.btn-primary(type="submit") Anmelden

    p
    if errors
     ul
     for error in errors
      li!= error.msg

    a(href="/catalog/passwordRecover") Passwort vergessen
    p
    a(href="/catalog/register") Registrieren