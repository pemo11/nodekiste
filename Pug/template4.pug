extends master

block content
  form.form-horizontal(method="POST" action="")
    div.form-group
      label.control-label.col-sm-2(for="name") Name:
      div.col-sm-10
       input#name.form-control(type="text" placeholder="name (Christian)" name="name" required="true" value=(undefined===data ? '' : data.name) autofocus)
    div.form-group
      label.control-label.col-sm-2(for="alter") Alter:
      div.col-sm-10
       input#alter.form-control(type="text" name="alter" required="true" value=(undefined===data ? '' : data.alter) )
    div.form-group
     label.control-label.col-sm-2(for="city") Stadt:
     div.col-sm-10
      input#stadt.form-control(type="text" name="wohnort" required="true" value=(undefined===data ? '' : data.wohnort) )
    div.form-group
     div.col-sm-10
      button.btn.btn-primary(type="submit") Absenden
  if errors
   ul
    for error in errors
      li!= error.msg
